#!/usr/bin/env bash
# this is a NOT A JOKE

SERIOUS_MODE_NO_FUNNY_BUSINESS=${SERIOUS_MODE_NO_FUNNY_BUSINESS:-}

if [ ! -z "$SERIOUS_MODE_NO_FUNNY_BUSINESS" ]; then
  /run/current-system/sw/bin/nix "$@"
  exit $?
fi

export CARGO_MOMMYS_ACTUAL=/run/current-system/sw/bin/nix
export CARGO_MOMMYS_PRONOUNS="its"
export CARGO_MOMMYS_ROLES="mistress"
export CARGO_MOMMYS_LITTLE="kitty"
export CARGO_MOMMYS_MOODS="chill/ominous/thirsty/yikes" 

cargo-mommy "$@"